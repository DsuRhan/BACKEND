//src/prisma/schema/store.prisma
model Store {
  id          String    @id @default(uuid()) @db.Uuid
  name        String
  description String?

  // === RELASI USER (NEW) ===
  userId      String    @db.Uuid
  user        User      @relation(fields: [userId], references: [id])

  // === RELASI PRODUCT ===
  products    Product[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  @@map("stores")
}
